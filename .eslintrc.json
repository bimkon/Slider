{
    "env": {
        "browser": true,
        "es2021": true,
        "jquery": true,
        "jest": true
    },
    "extends": [
        "airbnb-typescript/base"
    ],
    "settings": {
        "import/resolver": {
          "typescript": {} // this loads <rootdir>/tsconfig.json to eslint
        }
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module",
        "project": "./tsconfig.json",
        "createDefaultProgram": true
    },
    "plugins": [
        "fsd",
        "@typescript-eslint"
    ],
    "rules": {

        "import/extensions": [
            "error",
            "ignorePackages",
            {
              "js": "never",
              "jsx": "never",
              "ts": "never",
              "tsx": "never"
            }
          ],
        "fsd/hof-name-prefix": "error",
        "fsd/no-heavy-constructor": "error",
        "fsd/jq-cache-dom-elements": "error",
        "fsd/jq-use-js-prefix-in-selector": "error",
        "fsd/no-function-declaration-in-event-listener": "error",
        "fsd/split-conditionals": "error",
        "linebreak-style":"off",
        "class-methods-use-this": "off",
        "no-new": "off",
        "no-underscore-dangle": "off",
        "comma-dangle": ["error", "only-multiline"],
        "consistent-return": [1],
        "no-dupe-class-members": "off"
    }
}
