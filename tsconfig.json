{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es2015",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./jest-setup.ts",
    "src/**/*.ts", "tests/RangePathLine.test.ts", "tests/Scale.test.ts", "tests/MainView.test.ts", "tests/TipView.test.ts", "tests/Presenter.test.ts", "tests/SliderPath.test.ts", "tests/ThumbView.test.ts"
, "src/index.ts"
, "src/example/index.ts"  ],
  "exclude": ["node_modules", "dist"]
}