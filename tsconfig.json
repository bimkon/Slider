{
  "compilerOptions": {
    "strict": true,
    "esModuleInterop": true,
    "target": "es2015",
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "declaration": false,
    "sourceMap": true,
    "experimentalDecorators": true,
    "lib": ["es2015", "dom"],
    "outDir": "dist",
    "removeComments": true,
    "skipLibCheck": true,
    "suppressImplicitAnyIndexErrors": false,
    "allowSyntheticDefaultImports": true,
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "include": [
    "./jest-setup.ts",
    "src/**/*.ts", "Tests/RangePathLine.test.ts", "Tests/Scale.test.ts", "Tests/MainView.test.ts", "Tests/TipView.test.ts", "Tests/Presenter.test.ts", "Tests/SliderPath.test.ts", "Tests/ThumbView.test.ts"

  ],
  "exclude": ["node_modules", "dist", "**/*.test.ts", "./plugin/Model/Model.test.ts " ]
}